@model IEnumerable<Practica_Examen_BD_VC.Models.Examenes>

@{
    ViewBag.Title = "VistaExamenes";
}

<h2>VistaExamenes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombrePregunta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Respuesta1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Respuesta2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Respuesta3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Respuesta4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RespuestaCorrecta)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombrePregunta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Respuesta1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Respuesta2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Respuesta3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Respuesta4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RespuestaCorrecta)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PreguntaId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PreguntaId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PreguntaId })
                </td>
            </tr>
        }

    </table>
</div>

<div class="row">
    <div>
        @using (Html.BeginForm("vistaAlumnos", "Alumnos", FormMethod.Post))
        {

            <div style="margin-top: 20px;" class="col-md-3"><button type="submit" class="btn btn-danger" style="margin-left:25px;"><<< Anterior</button></div>
        }
        @using (Html.BeginForm("BuscarAlumno", "Alumnos", FormMethod.Post))
        {

            <div style="margin-top: 20px;" class="col-md-3"><button type="submit" class="btn btn-success" style="margin-left:25px;">Siguiente >>></button></div>
        }
    </div>
</div>
