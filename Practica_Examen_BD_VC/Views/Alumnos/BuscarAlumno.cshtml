@model IEnumerable<Practica_Examen_BD_VC.Models.Alumnos>

<div class="container-fluid">
    <div style="margin-top:20px;">
        @using (Html.BeginForm("BuscarAlumno", "Alumnos", FormMethod.Get))
        {

            <div class="row">
                <div></div>
                <div class="col-md-12">
                    <div class="col-md-3">
                        @Html.TextBox("Nombre", null, new { placeholder = "Filtre su busqueda", @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        @Html.TextBox("ApellidoPaterno", null, new { placeholder = "Filtre su busqueda", @class = "form-control" })
                    </div>
                </div>

                <div style="margin-top: 20px;" class="col-md-3"><button type="submit" class="btn btn-success" style="margin-left:25px;">Buscar</button></div>
            </div>
        }

        @if (Model == null) {
            { }
            <h1>No se encontro nada de eso</h1>
            }
            else
            {

           
        foreach (var item in Model)
        {

    <div class="row">
        <h2>
            @Html.DisplayFor(modelItem => item.Nombre)  @Html.DisplayFor(modelItem => item.ApellidoPaterno)  @Html.DisplayFor(modelItem => item.ApellidoMaterno)
            ,Grupo: @Html.DisplayFor(modelItem => item.Cuatrimestre),  Edad:  @Html.DisplayFor(modelItem => item.Edad) Años
        </h2>

        <h1> @ViewBag.mensaje</h1>

        @Html.ActionLink("Siguiente", "../ExamenResponder/ResponderExamenAlumno", new{ id = item.MatriculaId }, new { @class = "btn btn-danger", style="width: 80px;" })
     
    </div>


            }
        }
    </div>
</div>
